---
import { t } from '../utils/i18n.ts';
---

<section id="experience" class="px-4 py-16 sm:py-24 bg-secondary/40">
  <div class="max-w-5xl mx-auto relative">
    <h2 class="text-base sm:text-lg uppercase tracking-[0.15em] text-accent font-mono mb-12 font-semibold" data-i18n="experience.title">{t('experience.title')}</h2>

    <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-px bg-muted/40 -translate-x-1/2 experience-line"></div>

    <div class="space-y-12 md:space-y-16">
      <!-- Item 1: card a la derecha, entra desde la izquierda -->
      <article class="experience-item experience-item-from-left relative grid md:grid-cols-2 gap-y-4 opacity-0 transition-all duration-700">
        <div class="timeline-marker-center"></div>
        <div class="hidden md:block"></div>
        <div class="md:pl-10">
          <div class="timeline-content">
            <div class="timeline-header">
              <div class="timeline-year">Mar 2024 - Jan 2026</div>
            </div>
            <h3 class="timeline-title" data-i18n="experience.roles.softwareDeveloper">{t('experience.roles.softwareDeveloper')}</h3>
            <div class="timeline-company">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              <span data-i18n="experience.locations.aunoa">{t('experience.locations.aunoa')}</span>
            </div>
            <p class="timeline-description" data-i18n="experience.descriptions.softwareDev1">{t('experience.descriptions.softwareDev1')}</p>
            <div class="timeline-achievements">
              <div class="achievement-item">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span data-i18n="experience.achievements.softwareDev1">{t('experience.achievements.softwareDev1')}</span>
              </div>
              <div class="achievement-item">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span data-i18n="experience.achievements.softwareDev2">{t('experience.achievements.softwareDev2')}</span>
              </div>
              <div class="achievement-item">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span data-i18n="experience.achievements.softwareDev3">{t('experience.achievements.softwareDev3')}</span>
              </div>
            </div>
            <div class="timeline-tags">
              <span class="tag">Angular</span>
              <span class="tag">Node.js</span>
              <span class="tag">Docker</span>
              <span class="tag">Kubernetes</span>
              <span class="tag">GCP</span>
              <span class="tag">Jenkins</span>
              <span class="tag">SQL</span>
              <span class="tag">Clickhouse</span>
              <span class="tag">Vault</span>
              <span class="tag">Grafana</span>
              <span class="tag">LLMs</span>
              <span class="tag">Redis</span>
              <span class="tag">RabbitMQ</span>
            </div>
          </div>
        </div>
      </article>

      <!-- Item 2: card a la izquierda, entra desde la derecha -->
      <article class="experience-item experience-item-from-right relative grid md:grid-cols-2 gap-y-4 opacity-0 transition-all duration-700 delay-150">
        <div class="timeline-marker-center"></div>
        <div class="md:pr-10 md:text-right">
          <div class="timeline-content">
            <div class="timeline-header md:flex-row-reverse">
              <div class="timeline-year">Nov 2023 – Mar 2024</div>
            </div>
            <h3 class="timeline-title" data-i18n="experience.roles.chatbotDeveloper">{t('experience.roles.chatbotDeveloper')}</h3>
            <div class="timeline-company md:justify-end">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              <span data-i18n="experience.locations.aunoa">{t('experience.locations.aunoa')}</span>
            </div>
            <p class="timeline-description" data-i18n="experience.descriptions.chatbotDev1">{t('experience.descriptions.chatbotDev1')}</p>
            <div class="timeline-achievements achievements-reverse">
              <div class="achievement-item">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span data-i18n="experience.achievements.chatbotDev1">{t('experience.achievements.chatbotDev1')}</span>
              </div>
              <div class="achievement-item">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span data-i18n="experience.achievements.chatbotDev2">{t('experience.achievements.chatbotDev2')}</span>
              </div>
            </div>
            <div class="timeline-tags md:justify-end">
              <span class="tag">JavaScript</span>
              <span class="tag">SQLite</span>
              <span class="tag">Prompt Engineering</span>
              <span class="tag">Generative AI</span>
              <span class="tag">NLP</span>
              <span class="tag">Workflow Design</span>
            </div>
          </div>
        </div>
        <div class="hidden md:block"></div>
      </article>

      <!-- Item 3: card a la derecha, entra desde la izquierda -->
      <article class="experience-item experience-item-from-left relative grid md:grid-cols-2 gap-y-4 opacity-0 transition-all duration-700 delay-300">
        <div class="timeline-marker-center"></div>
        <div class="hidden md:block"></div>
        <div class="md:pl-10">
          <div class="timeline-content">
            <div class="timeline-header">
              <div class="timeline-year">Mar 2023 - May 2023</div>
            </div>
            <h3 class="timeline-title" data-i18n="experience.roles.backendDeveloper">{t('experience.roles.backendDeveloper')}</h3>
            <div class="timeline-company">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              <span data-i18n="experience.locations.mimacom">{t('experience.locations.mimacom')}</span>
            </div>
            <p class="timeline-description" data-i18n="experience.descriptions.backendDev1">{t('experience.descriptions.backendDev1')}</p>
            <div class="timeline-achievements">
              <div class="achievement-item">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span data-i18n="experience.achievements.backendDev1">{t('experience.achievements.backendDev1')}</span>
              </div>
              <div class="achievement-item">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span data-i18n="experience.achievements.backendDev2">{t('experience.achievements.backendDev2')}</span>
              </div>
            </div>
            <div class="timeline-tags">
              <span class="tag">JavaScript</span>
              <span class="tag">Spring Boot</span>
              <span class="tag">Flowable</span>
              <span class="tag">SQL</span>
              <span class="tag">REST APIs</span>
              <span class="tag">CI/CD</span>
              <span class="tag">Docker</span>
              <span class="tag">Kubernetes</span>
            </div>
          </div>
        </div>
      </article>
    </div>
  </div>

  <script is:inline>
    (function () {
      function initExperienceAnimation() {
        var items = document.querySelectorAll(".experience-item");
        if (!items.length) return;

        var observerOptions = {
          threshold: 0.1,
          rootMargin: "0px 0px -80px 0px",
        };

        var observer = new IntersectionObserver(
          function (entries) {
            entries.forEach(function (entry) {
              if (entry.isIntersecting) {
                entry.target.classList.add("animate-in");
                observer.unobserve(entry.target);
              }
            });
          },
          observerOptions
        );

        items.forEach(function (item) {
          observer.observe(item);
        });
      }

      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", initExperienceAnimation);
      } else {
        initExperienceAnimation();
      }
    })();
  </script>
  <style>
    .experience-line {
      background: linear-gradient(180deg, var(--color-accent) 0%, var(--color-accent) 100%);
      opacity: 0.4;
    }

    .timeline-marker-center {
      display: none;
      position: absolute;
      left: 50%;
      margin-left: -8px; /* mitad del ancho (16px) para centrar en la línea */
      top: 1rem;
      width: 16px;
      height: 16px;
      border-radius: 50%;
      border: 2px solid var(--color-accent);
      background: var(--color-primary);
      box-shadow: 0 0 20px var(--color-accent), 0 0 40px var(--color-accent);
      animation: pulse 2s infinite;
      z-index: 10;
    }

    @media (min-width: 768px) {
      .timeline-marker-center {
        display: block;
      }
    }

    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
        opacity: 1;
      }
      50% {
        transform: scale(1.1);
        opacity: 0.8;
      }
    }

    .experience-item-from-left {
      transform: translateX(-50px);
    }

    .experience-item-from-right {
      transform: translateX(50px);
    }

    .experience-item.animate-in.experience-item-from-left,
    .experience-item.animate-in.experience-item-from-right {
      opacity: 1 !important;
      transform: translateX(0) !important;
    }

    .timeline-content {
      background: var(--color-secondary);
      border: 1px solid rgba(56, 189, 248, 0.2);
      border-radius: 12px;
      padding: 2rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .timeline-content:hover {
      border-color: var(--color-accent);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
    }

    @media (min-width: 768px) {
      .experience-item:nth-child(odd) .timeline-content:hover {
        transform: translateX(5px);
      }
      .experience-item:nth-child(even) .timeline-content:hover {
        transform: translateX(-5px);
      }
    }

    .timeline-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1rem;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    @media (min-width: 768px) {
      .timeline-header.md\:flex-row-reverse {
        flex-direction: row-reverse;
      }
      .timeline-company.md\:justify-end {
        justify-content: flex-end;
      }
      .timeline-tags.md\:justify-end {
        justify-content: flex-end;
      }    
    }

    .timeline-year {
      font-family: var(--font-mono);
      color: var(--color-accent);
      font-weight: 700;
      font-size: 0.9rem;
    }

    .timeline-badge {
      background: linear-gradient(135deg, var(--color-accent) 0%, #0284C7 100%);
      color: white;
      padding: 0.3rem 0.8rem;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 600;
      font-family: var(--font-mono);
    }

    .timeline-title {
      font-family: var(--font-mono);
      font-size: 1.5rem;
      color: var(--color-accent);
      margin-bottom: 0.5rem;
      font-weight: 700;
    }

    .timeline-company {
      color: var(--color-accent);
      font-weight: 600;
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.95rem;
    }

    .timeline-company svg {
      flex-shrink: 0;
    }

    .timeline-description {
      color: var(--color-text);
      line-height: 1.8;
      margin-bottom: 2rem;
      font-size: 0.95rem;
    }

    .timeline-achievements {
      display: flex;
      flex-direction: column;
      gap: 0.8rem;
      margin-bottom: 2rem;
      padding: 1.5rem;
      background: var(--color-primary);
      border-radius: 12px;
      border-left: 3px solid var(--color-accent);
    }

    @media (min-width: 768px) {
      .achievements-reverse {
        border-left: none;
        border-right: 3px solid var(--color-accent);
      }
    }

    .achievement-item {
      display: flex;
      align-items: flex-start;
      gap: 0.8rem;
      color: var(--color-text);
      font-size: 0.95rem;
      line-height: 1.6;
    }

    @media (min-width: 768px) {
      .achievements-reverse .achievement-item {
        flex-direction: row-reverse;
      }
    }

    .achievement-item svg {
      color: #86efac;
      flex-shrink: 0;
      margin-top: 0.2rem;
    }

    .timeline-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tag {
      background: var(--color-primary);
      color: var(--color-accent);
      padding: 0.3rem 0.8rem;
      border-radius: 6px;
      font-size: 0.85rem;
      font-family: var(--font-mono);
      border: 1px solid rgba(56, 189, 248, 0.2);
      transition: all 0.2s ease;
    }

    .tag:hover {
      border-color: var(--color-accent);
      background: rgba(56, 189, 248, 0.1);
    }

    .experience-item {
      transition: opacity 0.7s ease-out, transform 0.7s ease-out;
    }

    [data-theme="light"] #experience {
      background: var(--color-secondary);
    }

    [data-theme="light"] .experience-line {
      opacity: 0.3;
    }

    [data-theme="light"] .timeline-marker-center {
      border-color: var(--color-primary);
      box-shadow: 0 0 15px var(--color-accent), 0 0 30px var(--color-accent);
    }

    [data-theme="light"] .timeline-content {
      background: var(--color-surface);
      border-color: var(--color-border);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    }

    [data-theme="light"] .timeline-content:hover {
      box-shadow: 0 8px 24px rgba(2, 132, 199, 0.12);
      transform: translateX(5px);
      border-color: var(--color-accent);
    }

    [data-theme="light"] .timeline-achievements {
      background: var(--color-secondary);
      border-left-color: var(--color-accent);
    }

    @media (min-width: 768px) {
      [data-theme="light"] .achievements-reverse {
        border-left-color: transparent;
        border-right-color: var(--color-accent);
      }
    }

    [data-theme="light"] .achievement-item {
      color: var(--color-text);
    }

    [data-theme="light"] .tag {
      background: var(--color-secondary);
      border-color: var(--color-border);
    }

    [data-theme="light"] .tag:hover {
      background: var(--color-hover);
      border-color: var(--color-accent);
    }

    @media (max-width: 768px) {
      .timeline-content {
        padding: 1.5rem;
      }

      .timeline-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
      }

      .timeline-header.md\:flex-row-reverse {
        flex-direction: column;
      }

      .timeline-company.md\:justify-end {
        justify-content: flex-start;
      }

      .timeline-tags.md\:justify-end {
        justify-content: flex-start;
      }

      .timeline-title {
        font-size: 1.3rem;
      }

      .timeline-achievements {
        padding: 1rem;
        gap: 0.6rem;
      }

      .achievement-item {
        font-size: 0.9rem;
      }
    }

    @media (max-width: 480px) {
      .timeline-content {
        padding: 1.2rem;
      }

      .timeline-title {
        font-size: 1.2rem;
      }

      .timeline-description {
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
      }

      .timeline-achievements {
        padding: 0.8rem;
        gap: 0.5rem;
      }

      .achievement-item {
        font-size: 0.85rem;
      }

      .tag {
        font-size: 0.75rem;
        padding: 0.25rem 0.6rem;
      }
    }
  </style>
</section>