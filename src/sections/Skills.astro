---
import { t } from '../utils/i18n.ts';
---

<section id="skills" class="px-4 py-16 sm:py-24 bg-secondary/40">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-base sm:text-lg uppercase tracking-[0.15em] text-accent font-mono mb-12 font-semibold" data-i18n="skills.title">{t('skills.title')}</h2>

    <div class="flex flex-wrap gap-2 mb-8">
      <button class="filter-btn active px-4 py-2 rounded-full bg-accent text-white text-sm font-medium transition-all hover:scale-105 active:scale-95" data-category="all" data-i18n="skills.filters.all">{t('skills.filters.all')}</button>
      <button class="filter-btn px-4 py-2 rounded-full bg-secondary/60 text-muted text-sm hover:bg-secondary transition-all hover:scale-105 active:scale-95" data-category="frontend" data-i18n="skills.filters.frontend">{t('skills.filters.frontend')}</button>
      <button class="filter-btn px-4 py-2 rounded-full bg-secondary/60 text-muted text-sm hover:bg-secondary transition-all hover:scale-105 active:scale-95" data-category="backend" data-i18n="skills.filters.backend">{t('skills.filters.backend')}</button>
      <button class="filter-btn px-4 py-2 rounded-full bg-secondary/60 text-muted text-sm hover:bg-secondary transition-all hover:scale-105 active:scale-95" data-category="devops" data-i18n="skills.filters.devops">{t('skills.filters.devops')}</button>
      <button class="filter-btn px-4 py-2 rounded-full bg-secondary/60 text-muted text-sm hover:bg-secondary transition-all hover:scale-105 active:scale-95" data-category="ai" data-i18n="skills.filters.ai">{t('skills.filters.ai')}</button>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <div class="skill-card skill-frontend" data-category="frontend">
        <div class="flex items-center gap-3">
          <img src="https://api.iconify.design/logos/angular-icon.svg" alt="Angular" class="w-6 h-6 object-contain" />
          <div>
            <p class="text-sm font-medium text-text">Angular</p>
            <p class="text-xs text-muted">Advanced</p>
          </div>
        </div>
      </div>

      <div class="skill-card skill-frontend" data-category="frontend">
        <div class="flex items-center gap-3">
